<layout>
    <default>
        <reference name="head">
            <action method="addCss"><name>css/vaimo_urbit.css</name></action>
            <action method="addItem"><type>skin_js</type><name>js/vaimo/urbit.js</name></action>
        </reference>
    </default>
    <catalog_product_view>
        <!--<reference name="product.info.extrahint">
            <block type="core/template" name="urbitinfo" template="vaimo/urbit/info.phtml" />
        </reference>-->
        <reference name="product.info.addtocart">
            <block type="core/template" name="urbitinfo" template="vaimo/urbit/info.phtml" />
            <block type="core/template" name="urbitpostcode" template="vaimo/urbit/postcode_check.phtml" />
        </reference>
    </catalog_product_view>
    <checkout_onepage_index>
        <reference name="checkout.onepage.shipping_method.available">
            <action method='setTemplate'><template>vaimo/urbit/available.phtml</template></action>
        </reference>
    </checkout_onepage_index>
    <checkout_onepage_shippingmethod>
        <reference name="root">
            <action method='setTemplate'><template>vaimo/urbit/available.phtml</template></action>
        </reference>
    </checkout_onepage_shippingmethod>
    <!-- vaimo_checkout support -->
    <vco_delivery_step>
        <reference name="available.shipping.methods">
            <block type="vaimo_urbit/deliveryDetails" name="urbit_onehour_urbit_specific" as="shipping.method.urbit_onehour_urbit_specific" template="vaimo/urbit/deliverydetails.phtml" />
        </reference>
    </vco_delivery_step>
    <checkout_index_shippingmethod>
        <reference name="root">
            <block type="vaimo_urbit/deliveryDetails" name="urbit_onehour_urbit_specific" as="shipping.method.urbit_onehour_urbit_specific" template="vaimo/urbit/deliverydetails.phtml" />
        </reference>
    </checkout_index_shippingmethod>
    <!-- end vaimo checkout -->
    <checkout_onepage_success>
        <reference name="content">
            <block type="core/template" name="urbitsuccess" template="vaimo/urbit/success.phtml"/>
        </reference>
    </checkout_onepage_success>
</layout>

